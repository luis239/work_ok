<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.NewProjectActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/imageView4"
        android:src="@drawable/logo"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/assigned_by"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:hint="@string/task_name"
                android:textAlignment="center"
                android:maxLength="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/no_user_assigned"
                android:id="@+id/no_assigned"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:enabled="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:weightSum="1"
                android:id="@+id/layoutSpiner"
                android:layout_marginBottom="-20dp">

                <Spinner
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_users"
                    android:prompt="@string/add_user"
                    android:textAlignment="center"
                    android:spinnerMode="dialog"
                    android:layout_weight="0.89" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:id="@+id/add"
                    android:layout_gravity="center"
                    android:background="@android:drawable/ic_input_add"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/status"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/in_progress"
                    android:id="@+id/radioButton"
                    android:layout_gravity="center_horizontal"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rejected"
                    android:id="@+id/radioButton2"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="7dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/done"
                    android:id="@+id/radioButton3"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="16dp" />
            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/percentage_progress"
                    android:id="@+id/textView3"
                    android:textSize="16sp"
                    android:layout_marginRight="20dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/percent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:id="@+id/textView4"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/container_dates">

                <EditText
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/init_date"
                    android:hint="@string/date_start"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:editable="false"
                    android:clickable="true"
                    android:contextClickable="false"
                    android:focusableInTouchMode="false" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/end_date"
                    android:hint="@string/date_end"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:onClick="showDatePickerDialog"
                    android:focusableInTouchMode="false" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/observaciones"
                android:lines="3"
                android:hint="@string/notes" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update_status"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:background="#000000"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
